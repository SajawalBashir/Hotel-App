<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/orderReviewImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/tempimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/titleOrderReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EEEEEEEEE"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderReviewImage"
        />

    <TextView
        android:id="@+id/bookingInformationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Your Booking Information"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/text_view_background"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleOrderReview"
        />

    <TextView
        android:id="@+id/orderReviewRoomTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Type"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/bookingInformationText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookingInformationText"/>

    <TextView
        android:id="@+id/orderReviewCheckInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckIn Date"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/bookingInformationText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderReviewRoomTypeText"/>

    <TextView
        android:id="@+id/orderReviewCheckOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckOut Date"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/bookingInformationText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderReviewCheckInText"/>

    <TextView
        android:id="@+id/orderReviewTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/bookingInformationText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0005"
        app:layout_constraintTop_toBottomOf="@id/orderReviewCheckOutText"/>



</androidx.constraintlayout.widget.ConstraintLayout>