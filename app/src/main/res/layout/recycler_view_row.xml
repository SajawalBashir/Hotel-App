<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/tempimage"/>

    <TextView
        android:id="@+id/title"
        android:text="This is the title"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/location_icon"
        app:layout_constraintLeft_toRightOf="@id/dp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        app:layout_constraintLeft_toRightOf="@id/location_icon"
        app:layout_constraintTop_toTopOf="@+id/location_icon" />

    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/rating_icon"
        app:layout_constraintLeft_toRightOf="@id/dp"
        app:layout_constraintStart_toStartOf="@+id/location_icon"
        app:layout_constraintTop_toBottomOf="@id/location_icon" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="5 Star"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rating_icon"
        app:layout_constraintLeft_toRightOf="@id/rating_icon"
        app:layout_constraintTop_toTopOf="@+id/rating_icon" />

    <TextView
        android:id="@+id/price_text"
        android:text="RM 500"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="5dp"
       app:layout_constraintTop_toBottomOf="@id/dp"
       android:background="#000000" />




</androidx.constraintlayout.widget.ConstraintLayout>